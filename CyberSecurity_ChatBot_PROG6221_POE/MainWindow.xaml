<Window x:Class="CyberSecurity_ChatBot_PROG6221_POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberSecurity_ChatBot_PROG6221_POE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >


    <DockPanel>
        <!-- Top navigation buttons -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="Teal" Height="40">
            <Button Content="ChatBot" Width="100" Margin="5" Click="Chat_Click"  Foreground="White" Background="Navy"/>
            <Button Content="Tasks" Width="100" Margin="5" Click="Tasks_Click" Foreground="White" Background="Navy"/>
            <Button Content="Quiz" Width="100" Margin="5" Click="Quiz_Click" Foreground="White" Background="Navy"/>
            <Button Content="Activity Log" Width="120" Margin="5" Click="ActivityLog_Click" Foreground="White" Background="Navy"/>
        </StackPanel>

        <!-- Main content frame -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
