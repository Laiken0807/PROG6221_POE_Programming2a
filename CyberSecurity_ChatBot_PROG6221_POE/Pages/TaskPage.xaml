<Page x:Class="CyberSecurity_ChatBot_PROG6221_POE.Pages.TaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CyberSecurity_ChatBot_PROG6221_POE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TaskPage" Background="LightSeaGreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="📝 Task Manager"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="Navy"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Add Task Section -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBox Name="TaskTitleBox"
             Height="30"
             Width="400"
             FontSize="14"
             Text="Enter task title"
             Background="#F0F0F0"
             BorderBrush="Navy"
             BorderThickness="1"
             Margin="0,0,0,8"/>

            <TextBox Name="TaskDescBox"
             Height="30"
             Width="400"
             FontSize="14"
             Text="Enter task description"
             Background="#F0F0F0"
             BorderBrush="Navy"
             BorderThickness="1"
             Margin="0,0,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Label Content="Reminder:"  Foreground="navy" FontSize="14"  FontWeight="DemiBold" VerticalAlignment="Center" Width="70"/>
                <DatePicker Name="ReminderDatePicker" Width="140"/>
                <TextBox Name="ReminderTimeBox" Width="80" Margin="10,0,0,0"
                 ToolTip="Format: HH:mm" 
                 Text="12:00"/>
            </StackPanel>

            <Button Content="Add Task"
            Width="120"
            Height="35"
            Background="Navy"
            Foreground="White"
            FontWeight="Bold"
            Click="AddTask_Click"/>
        </StackPanel>

        <!-- Task List -->
        <Border Grid.Row="2"
                BorderBrush="Navy"
                BorderThickness="1"
                CornerRadius="5"
                Background="White"
                Padding="10"
                Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox Name="TaskListBox"
                         FontSize="14"
                         Background="White"
                         BorderThickness="0"/>
            </ScrollViewer>
        </Border>

        <!-- Manage Task Section -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="✔ Complete Task"
                    Width="140"
                    Height="35"
                    Background="Navy"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Click="CompleteTask_Click"/>

            <Button Content="🗑 Delete Task"
                    Width="120"
                    Height="35"
                    Background="#DC143C"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="DeleteTask_Click"/>
        </StackPanel>
    </Grid>
</Page>