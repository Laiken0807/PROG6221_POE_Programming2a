<Page x:Class="CyberSecurity_ChatBot_PROG6221_POE.Pages.ActivityLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CyberSecurity_ChatBot_PROG6221_POE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ActivityLogPage">

    <Grid Background="Teal" Margin="20">
        <Border Background="Teal"  Padding="20" >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📜 Activity Log" FontSize="20" FontWeight="Bold"
                           Foreground="navy" Margin="0,0,0,10" TextAlignment="Center" />

                <ListBox Name="LogListBox"
                         Width="400" Height="200"
                         BorderBrush="Navy"
                         BorderThickness="1"
                         Background="LightGray"
                         Foreground="Navy"
                         FontStyle="Oblique"
                         FontSize="15"
                         Margin="0,0,0,10"
                         Padding="5"/>

                <Button Content="Refresh"
                        Width="120"
                        Background="Navy"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Refresh_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>