<Page x:Class="CyberSecurity_ChatBot_PROG6221_POE.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CyberSecurity_ChatBot_PROG6221_POE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChatPage" >

    <Grid Background="Teal">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ASCII Art -->
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Chat Box -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
        </Grid.RowDefinitions>

        <!-- ASCII Art -->
        <TextBlock x:Name="AsciiArtBlock"
                   FontFamily="Consolas"
                   FontSize="12"
                   Foreground="White"
                   TextWrapping="Wrap"
                   Margin="20,10,20,0"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>

        <!-- Header -->
        <TextBlock Grid.Row="1"
                   Text="🛡️ Cybersecurity ChatBot"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Navy"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"/>

        <!-- Chat Area -->
        <Border Grid.Row="2"
                BorderBrush="Navy"
                BorderThickness="2"
                Background="White"
                CornerRadius="8"
                Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="ChatListBox"
                         Background="White"
                         BorderThickness="0"
                         FontSize="14"/>
            </ScrollViewer>
        </Border>

        <!-- Input Area -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="20"
                    HorizontalAlignment="Center">
            <TextBox x:Name="ChatInput"
                     Width="500"
                     Height="30"
                     FontSize="14"
                     Margin="0,0,10,0"/>
            <Button Content="Send"
                    Width="80"
                    Height="30"
                    FontWeight="Bold"
                    Background="Navy"
                    Foreground="White"
                    Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Page>